<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" android:textColor="@android:color/white">
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<solid android:color="@color/red" />
			<corners android:radius="7dp" />
		</shape>
	</item>

	<item android:state_focused="true" android:textColor="@android:color/white">
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<solid android:color="@color/red" />
			<corners android:radius="7dp" />
		</shape>
	</item>

	<item android:textColor="@color/red">
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<stroke android:width="1dp" android:color="@color/red" />
			<corners android:radius="7dp" />
		</shape>
	</item>
</selector>